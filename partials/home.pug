mixin template(id, title, direction)
  li.home__item(class=`home__item--${id}`)
    a.home__link(href=`/case/${id}`)
      span.home__link__wrapper=title
        img.home__link__media(alt=`${title} Project Preview` data-direction=direction data-src=`/projects/${id}.jpg` data-src-webp=`/projects/${id}.webp`)

section.home
  .home__background
    .home__background__top
    .home__background__bottom

  .home__wrapper
    ul.home__list
      +template('white-stone-oyster-co', 'White Stone Oyster Co.', 'left')
      +template('steam-bell', 'Steam Bell', 'right')
      +template('work-garage-sale', 'WORK Garage Sale', 'left')
      +template('human-x', '(human)x', 'right')
      +template('alsamir-family-dentistry', 'Alsamir Family Dentistry', 'left')
      +template('bird-dog-mafia', 'Bird Dog Mafia', 'left')
      +template('revenuers-cut', 'Revenuer\'s Cut', 'right')
      +template('mission-gait', 'Mission Gait', 'left')
      +template('omy-gelato', 'O\'MY Gelato', 'right')
      +template('on-the-town', 'On The Town', 'right')
      +template('har-tru', 'Har Tru', 'left')
      +template('lc-king', 'L.C. King', 'right')
      +template('cj-deluca', 'CJ Deluca', 'left')
      +template('richmond-va', 'Richmond, Va', 'left')
